<div class="row">
    <div class="col-5">
        <p class="text-center bold-24px">Issuer</p>
        <div class="form-group">
            <div class="row">
                <div class="col-3">
                    <label>Name</label>
                </div>
                <div class="col-9">
                    <input required type="text" name="invoice[issuer][name]" class="form-control"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3">
                    <label>Vat ID</label>
                </div>
                <div class="col-9">
                    <input required type="text" name="invoice[issuer][vatId]" class="form-control"/>
                </div>
            </div>
