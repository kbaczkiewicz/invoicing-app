            <div class="row">
                <div class="col-3">
                    <label>Country</label>
                </div>
                <div class="col-9">
                    <select required  name="invoice[issuer][billingAddress][country]" class="form-control">
                        {% for country in countries %}
                            <option value="{{ country.id }}">{{ country.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
