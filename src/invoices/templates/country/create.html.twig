{% extends 'main.html.twig' %}
{% block title %}Create country{% endblock %}
{% block errors %}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <form action="/country/save" method="post">
                    <div class="row">
                        <div class="col-8 offset-2">
                            <div class="form-group">
                                <label>Name</label>
                                <input class="form-control" name="country[name]"/>
                            </div>
                            <div class="form-group">
                                <label>ISO code</label>
                                <input class="form-control" name="country[isoCode]"/>
                            </div>
                            <div class="form-group">
                                <label>Currency</label>
                                <input class="form-control" name="country[currency]"/>
                            </div>
                        </div>
                    </div>
                    <div class="row margin-bottom-5px">
                        <div class="col-2">
                            <a href="/countries" class="btn btn-danger">Abort</a>
                        </div>
                        <div class="col-2 offset-8">
                            <button class="btn btn-success float-right">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}